<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="10dp"
    android:layout_gravity="center">


    <ImageView
        android:id="@+id/imgResult0"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity = "center"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imgResult1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginStart="120dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"

        app:layout_constraintStart_toStartOf="@+id/imgResult0"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgResult2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginStart="120dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"

        app:layout_constraintStart_toStartOf="@+id/imgResult1"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imgResult3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity = "center"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult_line0"
        />

    <ImageView
        android:id="@+id/imgResult4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginStart="120dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"

        app:layout_constraintStart_toStartOf="@+id/imgResult3"
        app:layout_constraintTop_toBottomOf="@+id/txtResult_line1" />

    <ImageView
        android:id="@+id/imgResult5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:layout_marginStart="120dp"
        app:layout_constraintStart_toStartOf="@+id/imgResult4"
        app:layout_constraintTop_toBottomOf="@id/txtResult_line2"  />

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="400px"
        android:layout_height="200px"
        android:onClick="GallaryOnClick"
        android:text="GALLERY"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chLinear" />
    <TextView
        android:id="@+id/txtResult0"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResult0"/>
    <TextView
        android:id="@+id/txtResult_line0"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult0"/>
    <TextView
        android:id="@+id/txtResult1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResult1"/>
    <TextView
        android:id="@+id/txtResult_line1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult1"/>
    <TextView
        android:id="@+id/txtResult2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResult2"/>
    <TextView
        android:id="@+id/txtResult_line2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult2"/>
    <TextView
        android:id="@+id/txtResult3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResult3"/>
    <TextView
        android:id="@+id/txtResult_line3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult3"/>
    <TextView
        android:id="@+id/txtResult4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResult4"/>
    <TextView
        android:id="@+id/txtResult_line4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult4"/>
    <TextView
        android:id="@+id/txtResult5"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResult5"/>
    <TextView
        android:id="@+id/txtResult_line5"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult5"/>
    <LinearLayout
        android:id="@+id/chLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult_line3"
        >
        <CheckBox
            android:id="@+id/check0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1번"
             />
        <CheckBox
            android:id="@+id/check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2번"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/check0" />
        <CheckBox
            android:id="@+id/check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3번"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/check1" />
        <CheckBox
            android:id="@+id/check3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4번"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/check2" />
        <CheckBox
            android:id="@+id/check4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5번"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/check3" />
        <CheckBox
            android:id="@+id/check5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6번"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/check4" />
    </LinearLayout>
    <Button
        android:id="@+id/saveBtn"
        android:layout_width="400px"
        android:layout_height="200px"
        android:text="SAVE"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGallery" />

</androidx.constraintlayout.widget.ConstraintLayout>