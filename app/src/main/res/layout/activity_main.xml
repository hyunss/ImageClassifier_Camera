<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:layout_gravity="center"
    android:background="#ffcc">


    <ImageView
        android:id="@+id/imgResult0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity = "center"
        android:adjustViewBounds="true"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imgResult1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="120dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/imgResult0"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgResult2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="120dp"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@+id/imgResult1"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imgResult3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity = "center"
        android:adjustViewBounds="true"
        android:layout_marginTop="195dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imgResult4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="120dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="195dp"
        app:layout_constraintStart_toStartOf="@+id/imgResult3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgResult5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="195dp"
        android:adjustViewBounds="true"
        android:layout_marginStart="120dp"
        app:layout_constraintStart_toStartOf="@+id/imgResult4"
        app:layout_constraintTop_toTopOf="parent"  />

    <TextView
        android:id="@+id/txtResult0"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResult0"/>

    <TextView
        android:id="@+id/txtResult1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResult1"/>

    <TextView
        android:id="@+id/txtResult2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResult2"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txtResult0"
        >
        <CheckBox
            android:id="@+id/check0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1번"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            />
        <CheckBox
            android:id="@+id/check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2번"
            android:visibility="gone"
            android:layout_marginLeft="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/check0" />
        <CheckBox
            android:id="@+id/check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3번"
            android:visibility="gone"
            android:layout_marginLeft="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/check1" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtResult3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResult3"/>

    <TextView
        android:id="@+id/txtResult4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResult4"/>

    <TextView
        android:id="@+id/txtResult5"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgResult5"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"

        app:layout_constraintTop_toBottomOf="@+id/txtResult3"
        >
        <CheckBox
            android:id="@+id/check3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4번"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/check2" />
        <CheckBox
            android:id="@+id/check4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5번"
            android:visibility="gone"
            android:layout_marginLeft="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/check3" />

        <CheckBox
            android:id="@+id/check5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:text="6번"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/check4" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/result"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:background="#00ffffff"
        android:onClick="GallaryOnClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageButton
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        android:layout_marginStart="180dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#00ffffff"
        app:srcCompat="@drawable/galleryhover" />


</androidx.constraintlayout.widget.ConstraintLayout>